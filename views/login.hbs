<main class="wave-template">
    <form
        id="login-form"
        class="wave-form"
        method="POST"
        action="/api/v1/auth/login"
    >
        <div class="login-background"></div>

        <h1 class="wave-title">Sign In</h1>
        <p class="wave-text">
            Enter your username or email address and password to sign in.
        </p>

        <div class="wave-field-group">
            <input id="email" name="email" minlength="4" maxlength="254" required />
            <label for="email">Username -or- Email</label>
        </div>

        <div class="wave-field-group">
            <input id="password" name="password" required />
            <label for="password">Password</label>
        </div>

        <button type="submit" class="button success">
            Login <i class="fas fa-lock"></i>
        </button>

        <p class="wave-subtext">
            Don't have an account? <a href="/register">Sign Up</a>
        </p>
    </form>
</main>
